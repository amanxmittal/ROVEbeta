<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.me.sam.rove.Profile"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="175dp" >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="124dp"
                    android:layout_height="154dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintVertical_bias="0.636"
                    android:id="@+id/frameLayout">

                    <ImageView
                        android:id="@+id/imgBtnProfilePic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@mipmap/ic_launcher_round" />

                    <Button
                        android:id="@+id/btnGallery"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:background="#00000000"
                        android:layout_gravity="bottom|right"
                        android:text="gal"
                        android:textSize="8sp" />

                    <Button
                        android:id="@+id/btnCamera"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:background="#00000000"
                        android:layout_gravity="bottom|left"
                        android:text="cam"
                        android:textSize="8sp" />

                </FrameLayout>

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="102dp"
                    android:layout_height="38dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="USER_name"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="22dp"
                    app:layout_constraintLeft_toRightOf="@+id/frameLayout"
                    android:layout_marginLeft="28dp" />

                <EditText
                    android:id="@+id/etTravellingWith"
                    android:layout_width="167dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="28dp"
                    android:ems="10"
                    android:hint="travelling with"
                    android:inputType="textPersonName"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/frameLayout"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/etUserName" />

                <ImageButton
                    android:id="@+id/imgBtnEdit"
                    android:layout_width="37dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:background="#00000000"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@android:drawable/ic_menu_edit"
                    tools:layout_editor_absoluteX="323dp" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USER_NAME"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="32dp"
                    app:layout_constraintLeft_toRightOf="@+id/frameLayout"
                    android:layout_marginLeft="32dp" />

                <TextView
                    android:id="@+id/tvTravelling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="24dp"
                    android:text="Travelling with..."
                    app:layout_constraintLeft_toRightOf="@+id/frameLayout"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserName" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="338dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.58"
                    app:srcCompat="@mipmap/ic_launcher" />

                <ImageButton
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="12.06"
                    app:srcCompat="@mipmap/ic_launcher" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:layout_weight="0.26" />

                <ImageButton
                    android:id="@+id/logOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>]

</ScrollView>
